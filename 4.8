#include <iostream>
#include <string>
using namespace std;
struct Pizza
{
	string name;
	double d;
	double w;
};
void get(Pizza &p);
void show(Pizza p);

int main()
{
	cout<<"please input the number of the pizza:";
	int n;
	cin>>n;
	Pizza *p = new Pizza[n];
	for(int i=0;i<n;i++)
	{
		
		get(p[i]);
		show(p[i]);
	}
}

void get(Pizza &p)	
{
	cin.get();
	cout<<"Enter the Pizza name:";
	getline(cin,p.name);
	cout<<"\nEnter the d:";
	cin>>p.d;
	cout<<"\nEnter the weight:";
	cin>>p.w;
	return;
}

void show(Pizza p)
{
	cout<<"name="<<p.name<<" ,d="<<p.d<<" ,weight="<<p.w<<endl;
	return;
}
