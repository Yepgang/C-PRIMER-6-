#include <iostream>
#include <string>

using namespace std;

struct car{
	string name;
	int year;
};

void get(car *);
void show(car);

int main()
{
	cout<<"How many cars do your wish to catalog?";
	int num;
	cin>>num;
	car *c=new car[num];
	for(int i=0;i<num;i++,c++)
	{
		cout<<"Car #"<<i+1<<":"<<endl;
		get(c);
	}
	cout<<"\nHere is your collection: ";
	for(int i=0;i<num;i++)
	{
		show(car[i]);//有问题！！！
	}
	cin.get();
	return 0;
}

void get(car *c)
{
	cin.get();
	cout<<"Please enter the make:";
	string name;
	getline(cin,name);
	cout<<"\nplease enter the years of make:";
	int y;
	cin>>y;
	c->name=name;
	c->year=y;	
}

void show(car c)
{
	cout<<c.year<<"  "<<c.name<<endl;
}
